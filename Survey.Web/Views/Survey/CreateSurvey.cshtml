@model SurveyInputModel
@{
    ViewData["Title"] = "Create Survey";
}

<div class="text-center">
    <h1>Create a Survey</h1>
    <form asp-controller="Survey" asp-action="CreateSurvey">
        <div class="row form-group">
            <div class="col-4 offset-4">
                <div class="form-group">
                    <label asp-for="QuestionContent"></label>
                    <textarea asp-for="QuestionContent" class="form-control" placeholder="Enter a question" rows="2"></textarea>
                    <span asp-validation-for="QuestionContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnswerType"></label>
                    <select asp-for="AnswerType" class="form-control" asp-items="@Html.GetEnumSelectList<QuestionType>()"></select>
                    <span asp-validation-for="AnswerType" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>

    </form>
</div>
